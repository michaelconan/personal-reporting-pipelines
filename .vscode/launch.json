{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            // Disable coverage check to allow breakpoints in debug
            "name": "Python Debugger: PyTest No Coverage",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}",
            "module": "pytest",
            "console": "integratedTerminal",
            "args": [
                "--no-cov"
            ],
            "justMyCode": false
        }
    ]
}